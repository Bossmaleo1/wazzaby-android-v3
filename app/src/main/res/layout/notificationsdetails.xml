<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:layout_below="@+id/appbarlayout"
            >

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardviewmaterialblock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/graycolor"
                    android:padding="5dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_menu_message_public"
                        android:layout_gravity="center"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/block1"
                            >


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/iconetmachin"
                                >

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/icon"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="4dp"
                                    android:src="@drawable/ic_profile_colorier"
                                    fresco:roundedCornerRadius="20dp"
                                    />

                                <LinearLayout
                                    android:id="@+id/block"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_toRightOf="@id/icon"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="4dp"
                                    >

                                    <TextView
                                        android:id="@+id/title"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        />

                                    <TextView
                                        android:id="@+id/title1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textSize="10dp"
                                        />
                                </LinearLayout>

                            </RelativeLayout>


                            <View
                                android:layout_below="@+id/iconetmachin"
                                android:id="@+id/viewbis3"
                                android:layout_width="match_parent"
                                android:layout_height="6dip"
                                android:layout_marginLeft="4dip"
                                android:layout_marginRight="4dip"
                                android:background="@android:color/transparent"
                                />

                            <RelativeLayout
                                android:id="@+id/photo_du_poste"
                                android:layout_below="@+id/viewbis3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/photo_du_poste_background"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/baseline_insert_photo_black_48"
                                    android:layout_centerInParent="true"
                                    />



                            </RelativeLayout>

                            <View
                                android:layout_below="@+id/photo_du_poste"
                                android:id="@+id/viewbis3_mou_baka"
                                android:layout_width="match_parent"
                                android:layout_height="6dip"
                                android:layout_marginLeft="4dip"
                                android:layout_marginRight="4dip"
                                android:background="@android:color/transparent"
                                />

                            <TextView
                                android:id="@+id/contenu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_below="@+id/viewbis3_mou_baka"/>


                            <View
                                android:layout_below="@+id/contenu"
                                android:id="@+id/viewbis1"
                                android:layout_width="match_parent"
                                android:layout_height="12dip"
                                android:layout_marginLeft="4dip"
                                android:layout_marginRight="4dip"
                                android:background="@android:color/transparent"
                                />



                            <View
                                android:layout_below="@+id/viewbis1"
                                android:id="@+id/viewbis"
                                android:layout_width="match_parent"
                                android:layout_height="1dip"
                                android:background="?android:attr/dividerHorizontal"
                                />


                            <View
                                android:layout_below="@+id/viewbis"
                                android:id="@+id/viewbis6"
                                android:layout_width="match_parent"
                                android:layout_height="6dip"
                                android:layout_marginLeft="4dip"
                                android:layout_marginRight="4dip"
                                android:background="@android:color/transparent"
                                />

                            <LinearLayout
                                android:id="@+id/mondernierblock"
                                android:layout_below="@+id/viewbis6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:layout_marginLeft="10dp"
                                >

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:id="@+id/commentblock"
                                    >
                                    <ImageView
                                        android:id="@+id/commenticon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:tint="@color/primarygraydark"
                                        />


                                    <TextView
                                        android:id="@+id/contenucomment"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        />


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginLeft="10dp"
                                    >

                                    <ImageView
                                        android:id="@+id/icon_jaime"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/baseline_thumb_up_alt_black_24"
                                        android:tint="@color/primarygraydark"
                                        />


                                    <TextView
                                        android:id="@+id/nombre_de_jaime"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:layout_marginLeft="5dp"
                                        />


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginLeft="10dp"
                                    >

                                    <ImageView
                                        android:id="@+id/icon_jaimepas"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/baseline_thumb_down_alt_black_24"
                                        android:tint="@color/primarygraydark"
                                        />


                                    <TextView
                                        android:id="@+id/nombre_de_jaimepas"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:layout_marginLeft="5dp"
                                        />


                                </LinearLayout>


                            </LinearLayout>


                            <View
                                android:layout_below="@+id/mondernierblock"
                                android:id="@+id/viewbis18"
                                android:layout_width="match_parent"
                                android:layout_height="6dip"
                                android:layout_marginLeft="4dip"
                                android:layout_marginRight="4dip"
                                android:background="@android:color/transparent"
                                />



                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>





            </com.google.android.material.card.MaterialCardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardviewmaterialblock"
                >

                    <LinearLayout
                        android:id="@+id/materialcardview"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:background="@drawable/background_error_message"
                        android:padding="10dp"
                        >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center_horizontal"
                                >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/baseline_block_black_24"
                                    android:tint="@android:color/holo_red_dark"
                                    />

                                <TextView
                                    android:id="@+id/text_error_message"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:text=" Erreur reseaux, veuillez reessayer svp !"/>

                            </LinearLayout>

                </LinearLayout>



                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/my_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:scrollbars="vertical"
                    android:layout_marginBottom="50dp"
                    />


            </RelativeLayout>


        </RelativeLayout>

        </androidx.core.widget.NestedScrollView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            >

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="#dfdfdf"/>

            <LinearLayout
                android:layout_below="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editcomment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:hint="Votre Commentaire"
                    android:background="@android:color/transparent"
                    android:inputType="textMultiLine"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:maxLines="6"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/submitcomment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/baseline_send_black_24" />
            </LinearLayout>
        </RelativeLayout>



    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
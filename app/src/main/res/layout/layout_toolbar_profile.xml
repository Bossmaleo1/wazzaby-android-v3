<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/ic_profile1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_profile"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp"
            android:scaleType="centerInside"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ic_profile1"
            android:src="@drawable/baseline_camera_alt_black_24"
            android:layout_alignParentRight="true"
            android:tint="@android:color/white"
            app:civ_shadow="true"
            app:civ_shadow_radius="1"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ic_profile2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_profile_colorier"
            fresco:roundedCornerRadius="40dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />

    </RelativeLayout>

</LinearLayout>